<h1>Accordion</h1>

<div class="accordion">
{%- for panel in panels -%}
    <h2>{{ panel.header | safe }}</h2>
    {{ panel.content | markdown | safe }}
{%- endfor -%}
</div>

<script>
    const accordion = new window.Pekoe.accordion('.accordion', {
        onCreate: function() {
            console.log("Accordion created.");
        },
        onExpand: function() {
            console.log(this.header.textContent + " expanded.");
        },
        onCollapse: function() {
            console.log(this.header.textContent + " collapsed.");
        }
    });
</script>

<style>
.accordion button {
    font-family: inherit;
    font-size: inherit;
    font-weight: inherit;
}
</style>
